<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.shelf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safety Shelf"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <!-- Center this LinearLayout in the middle of the screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/safetytips"
                android:layout_width="155dp"
                android:layout_height="183dp"
                android:background="@drawable/edittextresfile"
                android:backgroundTint="#F5F5F5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/safetytipslogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kadwa"
                    android:text="Safety tips"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yoga"
                android:layout_width="155dp"
                android:layout_height="183dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittextresfile"
                android:backgroundTint="#F5F5F5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/yoga" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kadwa"
                    android:text="Yoga"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:id="@+id/periodtracker"
                android:layout_width="155dp"
                android:layout_height="183dp"
                android:background="@drawable/edittextresfile"
                android:backgroundTint="#F5F5F5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/periodstracker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kadwa"
                    android:text="Periods tracker"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myplans"
                android:layout_width="155dp"
                android:layout_height="183dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittextresfile"
                android:backgroundTint="#F5F5F5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/karatelogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kadwa"
                    android:text="Karate Lessons"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container2"
        />

</RelativeLayout>
