<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context=".ui.shelf">

    <LinearLayout
        android:id="@+id/safetytips"
        android:layout_width="155dp"
        android:layout_height="183dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:src="@drawable/safetytipslogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kadwa"
            android:text="Safety tips"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yoga"
        android:layout_width="155dp"
        android:layout_height="183dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/safetytips"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:src="@drawable/yoga" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kadwa"
            android:text="Yoga"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/periodtracker"
        android:layout_width="155dp"
        android:layout_height="183dp"
        android:layout_below="@id/safetytips"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:src="@drawable/periodstracker" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kadwa"
            android:text="Periods tracker"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myplans"
        android:layout_width="155dp"
        android:layout_height="183dp"
        android:layout_below="@id/yoga"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/safetytips"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:src="@drawable/plans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kadwa"
            android:text="My plans"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>