<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Karate Stances"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front Stance"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start by standing with your feet shoulder-width apart. For a right stance, bend your right knee and step back with your left foot so that your back leg is almost straight. For a left stance, switch your feet.\n\nMake sure your front knee is bent enough so that you can’t see your front toes. Your back foot should face forward."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back Stance"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stand with your toes pointed out about 45 degrees. Bend your knees and step your front foot forward. Keep the majority of your weight on your back leg so that if your front foot were to be knocked off the ground you would keep your balance."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horse Riding Stance"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stand tall and step your feet to the sides so that they’re slightly wider than shoulder-width apart. Point your little toes forward and bend your knees."
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>