<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context=".ui.home">
    <!-- activity_main.xml -->

    <LinearLayout
        android:id="@+id/emercontacts"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/abel"
            android:text="Emergency Contacts"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nearpolicesta"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/emercontacts"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/abel"
            android:text="Near By Police Stations"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nearhospitals"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/nearpolicesta"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/abel"
            android:text="Near By Hospitals"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nearhotels"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/nearhospitals"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/abel"
            android:text="Near By Hotels"
            android:textColor="@color/black" android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nightshelters"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/nearhotels"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/edittextresfile"
        android:backgroundTint="#F5F5F5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/abel"
            android:text="Night Shelters"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>