<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Karate Moves"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Karate Chop"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To perform a karate chop, put your thumb against your index finger. Bend your fingers slightly and use the side of your hand closest to your pinky to make contact with your target. Chop all the way through your target without pulling back."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roundhouse Kick"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep your hands up before initiating the kick to replicate how you would set up in an actual fight. Lift the leg youâ€™re going to kick with and bend at the knee so that your calf is almost touching your thigh. Shift your weight to your supporting foot as you snap your leg forward. Your momentum should carry you toward your target. Make contact with your target before your leg is completely straight."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Punch"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assume a balanced stance before initiating the punch. Close your fist and bring it to your side. Punch in a straight line to deliver the most force. Your elbow should brush against your side, and aim to contact your target with your first two knuckles."
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
