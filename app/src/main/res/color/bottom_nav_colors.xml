<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:color="@color/pink_dark" /> <!-- Selected state -->
    <item android:state_enabled="false"
        android:color="@color/gray_light" /> <!-- Disabled state -->
    <item android:state_pressed="true"
        android:color="@color/pink_medium" /> <!-- Pressed state -->
    <item android:color="@color/pink_light" /> <!-- Default/unselected state -->
</selector>